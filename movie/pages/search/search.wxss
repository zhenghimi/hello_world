/* pages/search/search.wxss */
@import '../../templates/movie-templates/movie-templates.wxss';
/* 搜索框 */
.search_box{
  position: fixed;
  top: 0;
  width: 100vw;
  display: flex;
  height: 100rpx;
  background-color: #42db56;
  align-items: center;
  
}
.search_content{
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #eee;
  margin-left: 30rpx;
  padding: 6rpx 0;
  border-radius: 3px;
}
.search_content .search_icon{
  margin:0 10rpx;
}
.search_content .search_input{
  flex: 1;
  font-size: 28rpx;
}
.cancel{
  width: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
/* 列表布局 */
.movie_list{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.movie_item{
  width: 200rpx;
  margin:20rpx 0 0 37.5rpx ;

}
.movie_item .movie_img{
  width: 200rpx;
}
image{
  width: 100%;
  height: 100%;
}
.movie_scroll{
  position: fixed;
  top: 100rpx;
}

/* pages/personal/personal.wxss */
.avatar{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* vw代表% */
  width: 100vw;  
  height: 300rpx;
  background-color: #42bd56;
  color: #fff;
}
.avatar image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}
.info .section{
  display: flex;
  justify-content: space-between;
  margin:0 30rpx;
  border-bottom: 1px solid #ddd;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
}
/* 收货地址 */
.Address{
  margin-top: 100rpx;
}